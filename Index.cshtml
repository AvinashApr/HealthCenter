    <marquee behavior="scroll" direction="left" scrollamount="5">
        <span id="datetime"></span>
    </marquee>

    <script>
        function updateDateTime() {
            let now = new Date();
            let dateTimeString = now.toString(); // Sat Feb 22 2025 17:29:30 GMT+0530 (India Standard Time)
            document.getElementById("datetime").innerText = dateTimeString;
        }

        setInterval(updateDateTime, 1000); // हर सेकंड अपडेट होगा
        updateDateTime(); // पेज लोड होने पर तुरंत दिखाने के लिए
    </script>



